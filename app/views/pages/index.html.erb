<%= javascript_pack_tag "react-demos" %>

<div class="container">
  <header class="m-5 text-center">
    <h1>Kits Test Page</h1>
  </header>

  <section class="card m-5 p-5">
    <h3>Rails Kits</h3>
    <%= pb_rails("card") do %>
      <%= pb_rails("caption", props: {text: "This is a caption"}) %>
    <% end %>
    <%= pb_react("caption", props: {text: "This is a react caption"}) %>

    <!-- Bar Graph test -->
    <% data = [{
        name: 'Installation',
        data: [154175]
    }, {
        name: 'Manufacturing',
        data: [40434]
    }, {
        name: 'Sales & Distribution',
        data: [39387]
    }, {
        name: 'Project Development',
        data: [34227]
    }, {
        name: 'Other',
        data: [18111]
    }] %>
    <%= pb_rails("bar_graph", props: { id: "bar-test", chart_data: data, point_start: "2012", title: 'Solar Employment Growth by Sector, 2010-2016', subtitle: 'Source: thesolarfoundation.com', axis_title: 'Number of Employees' }  ) %>

    <%= pb_rails("avatar", props: { name: "Stephen Marshall", size: "lg", image: { url: "https://media.tenor.com/images/ca2a7b8ea44e00eaea0e62bc393b3b3d/tenor.gif" }, status: "away"}) %>

  </section>

  <section id="react" class="card m-5 p-5">
    <!-- React components here -->
  </section>
